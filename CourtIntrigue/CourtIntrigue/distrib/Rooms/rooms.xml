<rooms>
  <!-- 
  Higher priority rooms have their characters evaluated sooner on
  a tick.  This means that if it is possible to move between rooms
  during a tick, the target must have a lower priority
  -->
  <room>
    <id>TOWN_ROOM</id>
    <name>Town</name>
    <common>Yes</common>
    <priority>90</priority>
    <requirements>
      <is_male/>
      <is_adult/>
    </requirements>
    <solo_actions>
      <action>PUBLIC_URINATION_ACTION</action>
      <action>VISIT_TAILOR_ACTION</action>
      <action>ATTEND_CHURCH_ACTION</action>
      <action>ENTER_CHURCH_ACTION</action>
    </solo_actions>
  </room>
  <room>
    <id>COURT_ROOM</id>
    <name>Court</name>
    <common>Yes</common>
    <priority>100</priority>
    <requirements>
      <is_male/>
      <is_adult/>
    </requirements>
    <solo_actions>
      <action>EAVESDROP_ACTION</action>
    </solo_actions>
    <pair_actions>
      <action>APPROACH_ACTION</action>
      <action>COUNCILLOR_APPROACH_ACTION</action>
    </pair_actions>
  </room>
  <room>
    <id>CHURCH_ROOM</id>
    <name>Church</name>
    <common>Yes</common>
    <!-- Priority needs to be less than the Town 
    priority since some events move to church from town.-->
    <priority>50</priority>
    <requirements>
      <false/>
    </requirements>
    <solo_actions>
      <action>EAVESDROP_ACTION</action>
    </solo_actions>
    <pair_actions>
      <action>APPROACH_ACTION</action>
    </pair_actions>
  </room>
  <room>
    <id>ESTATE_ROOM</id>
    <name>Home</name>
    <common>No</common>
    <priority>0</priority>
    <solo_actions>
      <action>COLLECT_TAXES_ACTION_ID</action>
      <action>SPEND_TIME_WITH_WIFE_ACTION_ID</action>
      <action>DO_NOTHING_ACTION_ID</action>
    </solo_actions>
  </room>
</rooms>