<events>
  <event>
    <id>VISIT_TAILOR_EVENT_0</id>
    <description>You step into the tailor's shop.</description>
    <requirements>
      <action_id>VISIT_TAILOR_ACTION</action_id>
    </requirements>
    <options>
      <option>
        <label>Buy yourself new clothes</label>
        <requirements>
          <has_gold>5</has_gold>
        </requirements>
        <exec>
          <spend_gold>5</spend_gold>
          <set_variable name="WellDressed">TIME</set_variable>
          <offset_variable name="WellDressed">50</offset_variable>
          <trigger_event>
            <id>VISIT_TAILOR_BOUGHT_SELF_CLOTHES_EVENT</id>
          </trigger_event>
        </exec>
      </option>
      <option>
        <label>Browes the tailor services</label>
        <exec>
          <trigger_event>
            <id>VISIT_TAILOR_EVENT_1</id>
          </trigger_event>
        </exec>
      </option>
    </options>
  </event>
  <event>
    <id>VISIT_TAILOR_EVENT_1</id>
    <description>A man's outfit costs 5 gold.</description>
    <options>
      <option>
        <label>OK</label>
      </option>
    </options>
  </event>
  <event>
    <id>VISIT_TAILOR_BOUGHT_SELF_CLOTHES_EVENT</id>
    <description>You bought yourself a swanky new outfit!</description>
    <options>
      <option>
        <label>OK</label>
      </option>
    </options>
  </event>
</events>