<events>
  <event>
    <id>COLLECT_TAXES_EVENT_ID_0</id>
    <description>You decide today's a good day for taxes.</description>
    <requirements>
      <is_male/>
      <is_adult/>
      <!-- The King collects taxes through the Steward -->
      <not>
        <has_job>KING_JOB</has_job>
      </not>
    </requirements>
    <options>
      <option>
        <label>Head off to town to collect some taxes</label>
        <requirements>
          <var_le name="Unrest">TIME</var_le>
        </requirements>
        <exec>
          <get_gold>100</get_gold>
          <offset_variable name="Unrest">20</offset_variable>
          <trigger_event>
            <id>COLLECT_TAXES_SUCCESS_EVENT</id>
          </trigger_event>
        </exec>
      </option>
      <option>
        <label>Head off to town to collect some taxes</label>
        <requirements>
          <var_gt name="Unrest">TIME</var_gt>
        </requirements>
        <exec>
          <prestige_change>-10</prestige_change>
          <offset_variable name="Unrest">5</offset_variable>
          <trigger_event>
            <id>COLLECT_TAXES_FAILURE_EVENT</id>
          </trigger_event>
        </exec>
      </option>
    </options>
  </event>
  <event>
    <id>COLLECT_TAXES_SUCCESS_EVENT</id>
    <description>You collect some taxes from your lowly peasants</description>
    <options>
      <option>
        <label>OK</label>
      </option>
    </options>
  </event>
  <event>
    <id>COLLECT_TAXES_FAILURE_EVENT</id>
    <description>The angry peasants chase you out of town!</description>
    <options>
      <option>
        <label>OK</label>
      </option>
    </options>
  </event>
  <event>
    <id>SPEND_TIME_WITH_WIFE_EVENT_0</id>
    <description>Spend time with $ROOT.Spouse.Name$ in bed...</description>
    <requirements>
      <has_spouse/>
      <is_male/>
      <is_adult/>
    </requirements>
    <options>
      <option>
        <label>OK</label>
        <exec>
          <set_scope name="SPOUSE">
            <if>
              <requirements>
                <var_lt name="PregnancyEnd">TIME</var_lt>
              </requirements>
              <then>
                <!-- Wife can get pregnant again -->
                <random>
                  <outcome chance="0.5">
                    <set_variable name="IsPregnant">1</set_variable>
                    <set_variable name="PregnancyEnd">TIME+150</set_variable>
                  </outcome>
                </random>
              </then>
            </if>
          </set_scope>
        </exec>
      </option>
    </options>
  </event>
  <event>
    <id>SPEND_TIME_WITH_WIFE_EVENT_1</id>
    <description>You go riding with $ROOT.Spouse.Name$.</description>
    <requirements>
      <has_spouse/>
      <is_male/>
      <is_adult/>
    </requirements>
    <options>
      <option>
        <label>OK</label>
      </option>
    </options>
  </event>
  <event>
    <id>DO_NOTHING_EVENT</id>
    <description>You spend some time sitting down.</description>
    <requirements>
      <not>
        <is_male/>
        <is_adult/>
      </not>
    </requirements>
    <options>
      <option>
        <label>OK</label>
      </option>
    </options>
  </event>
</events>