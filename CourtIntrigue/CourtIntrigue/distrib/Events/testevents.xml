<events>
  <event>
    <id>PUBLIC_URINATION_EVENT_0</id>
    <description>You are suddenly overcome with the urge to urinate.  You can't wait any longer!</description>
    <requirements>
      <action_id>PUBLIC_URINATION_ACTION</action_id>
    </requirements>
    <options>
      <option>
        <label>Pee in a ditch</label>
        <exec>
          <everyone_in_room>
            <for_character>
              <observe_information>
                <id>PUBLIC_URINATION_SIGHTING_INFORMATION</id>
                <parameters PeeingParty="ROOT"/>
                <chance>20</chance>
              </observe_information>
            </for_character>
          </everyone_in_room>
        </exec>
      </option>
      <option>
        <label>Pee in an alley</label>
        <exec>
          <everyone_in_room>
            <for_character>
              <observe_information>
                <id>PUBLIC_URINATION_SIGHTING_INFORMATION</id>
                <parameters PeeingParty="ROOT"/>
                <chance>5</chance>
              </observe_information>
            </for_character>
          </everyone_in_room>
        </exec>
      </option>
    </options>
  </event>
  <event>
    <id>EAVESDROP_ACTION_0</id>
    <description>You need to drop some eaves!</description>
    <requirements>
      <action_id>EAVESDROP_ACTION</action_id>
    </requirements>
    <options>
      <option>
        <label>Go look for some eaves!</label>
      </option>
    </options>
  </event>
</events>